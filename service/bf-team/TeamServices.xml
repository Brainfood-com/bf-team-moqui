<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-2.1.xsd">
    <service verb="isUserIn" noun="Team" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="isUserInTeam">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
            <parameter name="memberPartyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="isUserInTeam" Stype="Boolean" required="true"/>
        </out-parameters>
    </service>
    <service verb="create" noun="Team" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="createTeam">
        <in-parameters>
            <parameter name="teamName" type="String" required="true"/>
            <parameter name="ownerPartyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="partyId" type="String" required="true"/>
        </out-parameters>
    </service>
    <service verb="get" noun="TeamMemberCount" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="getTeamMemberCount">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="memberCount" type="Integer" required="true"/>
        </out-parameters>
    </service>
    <service verb="read" noun="SimpleTeam" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="readSimpleTeam">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="team" type="Map" required="true">
                <parameter name="partyId" type="String" required="true"/>
                <parameter name="teamName" type="String" required="true"/>
                <parameter name="userPartyRoles" type="List" required="true">
                    <parameter name="userPartyRole" type="String"/>
                </parameter>
            </parameter>
        </out-parameters>
    </service>
    <service verb="read" noun="Team" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="readTeam">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="team" type="Map" required="true">
                <parameter name="partyId" type="String" required="true"/>
                <parameter name="partyTypeEnumId" type="String" required="true"/>
                <parameter name="teamName" type="String" required="true"/>
                <parameter name="owner" type="Map&lt;String, Object&gt;String" required="true"/>
                <parameter name="members" type="List&lt;Map&lt;String, Object&gt;&gt;" required="true"/>
                <parameter name="userPartyRoles" type="List" required="true">
                    <parameter name="userPartyRole" type="String"/>
                </parameter>
            </parameter>
												<!-- <parameter name="_parties" type="Collection&lt;Map&lt;String, Object&gt;&gt;" required="true"/> -->
        </out-parameters>
    </service>
    <service verb="readAll" noun="Teams" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="readAllTeams">
        <in-parameters>
            <parameter name="partyId" type="String"/>
        </in-parameters>
        <out-parameters>
            <parameter name="teams" type="List" required="true">
                <parameter name="team" type="Map">
                    <parameter name="partyId" type="String" required="true"/>
                    <parameter name="teamName" type="String" required="true"/>
                    <parameter name="userPartyRoles" type="List" required="true">
                        <parameter name="userPartyRole" type="String"/>
                    </parameter>
                </parameter>
            </parameter>
        </out-parameters>
    </service>


    <service verb="read" noun="TeamPartyRoles" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="readTeamPartyRoles">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="teamPartyRoles" type="List&lt;Map&lt;String, String&gt;&gt;" required="true"/>
        </out-parameters>
    </service>


    <service verb="set" noun="TeamMember" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="setTeamMember">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
            <parameter name="memberPartyId" type="String" required="true"/>
            <parameter name="roleTypes" type="Collection&lt;String&gt;"/>
        </in-parameters>
    </service>

    <service verb="delete" noun="TeamMember" type="script" location="component://bf-team/service/bf-team/Team.groovy" authenticate="false" method="deleteTeamMember">
        <in-parameters>
            <parameter name="partyId" type="String" required="true"/>
            <parameter name="memberPartyId" type="String" required="true"/>
        </in-parameters>
    </service>

    <service verb="invite" noun="User" type="script" location="component://bf-team/service/bf-team/Invite.groovy" authenticate="false" method="inviteUser">
        <in-parameters>
            <parameter name="httpHostname" type="String"/>
            <parameter name="httpScheme" type="String"/>
            <parameter name="firstName" type="String"/>
            <parameter name="lastName" type="String"/>
            <parameter name="emailAddress" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
            <parameter name="currentStatusId" type="String" required="true"/>
        </out-parameters>
    </service>
    <service verb="checkExisting" noun="User" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="checkExistingUser">
        <!-- partyId = currentUser -->
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
        </in-parameters>
    </service>
    <service verb="attachInviteTo" noun="OwnerTeam" type="script" location="component://bf-team/service/bf-team/Invite.groovy" authenticate="false" method="attachInviteToOwnerTeam">
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
            <parameter name="partyId" type="String"/>
        </in-parameters>
    </service>
    <service verb="associate" noun="CommunicationEvents" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="associateCommunicationEvents">
        <!-- partyId = currentUser -->
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
        </in-parameters>
    </service>
    <service verb="attachInviteeTo" noun="Team" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="attachInviteeToTeam">
        <!-- partyId = currentUser -->
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
        </in-parameters>
    </service>
    <service verb="send" noun="InviteEmail" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="sendInviteEmail">
        <!-- partyId = currentUser -->
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
        </in-parameters>
    </service>
    <service verb="send" noun="JoinTeamEmail" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="sendJoinTeamEmail">
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
        </in-parameters>
    </service>

    <!-- group invite:create -->
    <service verb="create" noun="Invite" type="inline" authenticate="false">
        <in-parameters>
            <!-- from invite#User -->
            <parameter name="httpHostname" type="String"/>
            <parameter name="httpScheme" type="String"/>
            <parameter name="firstName" type="String"/>
            <parameter name="lastName" type="String"/>
            <parameter name="emailAddress" type="String" required="true"/>

            <!-- from attachInviteTo#OwnerTeam -->
            <parameter name="partyId" type="String" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
            <parameter name="currentStatusId" type="String" required="true"/>
        </out-parameters>
        <actions>
            <service-group send-mode="all">
                <service-invoke name="bf-team.TeamServices.invite#User" result-to-context="true"/>
                <service-invoke name="bf-team.TeamServices.attachInviteTo#OwnerTeam" result-to-context="true"/>
            </service-group>
        </actions>
    </service>
    <service verb="update" noun="Invite" type="script" location="component://bf-team/service/bf-team/Invite.groovy" method="updateInvite">
        <in-parameters>
            <parameter name="workEffortId" type="String" required="true"/>
            <parameter name="firstName" type="String"/>
            <parameter name="lastName" type="String"/>
            <parameter name="emailAddress" type="String"/>
            <parameter name="currentStatusId" type="String"/>
        </in-parameters>
        <required-permissions join-type="AND">
            <check-permission permission="INVITE" action="UPDATE"/>
        </required-permissions>
    </service>
    <service verb="read" noun="Invites" type="script" location="component://bf-team/service/Invite.groovy" method="readInvites">
        <out-parameters>
            <parameter name="workEfforts" type="List&lt;String&gt;" required="true"/>
        </out-parameters>
    </service>
</services>
